@page "/Movies"
@using Sep6Client.Model
@using Sep6Client.Data.Movies
@inject IMoviesService moviesService
@inject NavigationManager nav

<PageTitle>Movies</PageTitle>
<h1>Movies</h1>

@if (movies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>Title</th>
                <th>ID</th>
                <th>Rating</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var movie in movies)
            {
                var id = movie.Id;
                <tr>
                    <td><a @onclick="() => OpenMovieDetails(id)">@movie.Title</a></td>
                    <td>@movie.Id</td>
                    <td>@movie.Rating/10</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    <div>
         @if (pageCounter > 1)
         {
             <button @onclick="OnLoadPreviousPage">@leftArrow-- Previous</button>
         }
         <button @onclick="OnLoadNextPage">Next --></button>
     </div>
}
<p style="color: red">@errorMessage</p>

@code {
    private IList<Movie>? movies;
    private int pageCounter = 1;
    private string errorMessage = "";
    private char leftArrow = '<';
    
    protected override async Task OnInitializedAsync()
    {
        await GetMoviesAsync(pageCounter);
    }

    private async Task GetMoviesAsync(int pageNr)
    {
        try
        {
            movies = await moviesService.GetBrowsingMoviesAsync(pageNr);
        }
        catch(Exception e)
        {
            errorMessage = $"Exception thrown: {e.GetType()}\n{e.StackTrace}";
            await Console.Out.WriteLineAsync(e.StackTrace);
        }
    }

    private async Task OnLoadNextPage()
    {
        movies = null;
        await GetMoviesAsync(++pageCounter);
    }
    
    private async Task OnLoadPreviousPage()
    {
        movies = null;
        await GetMoviesAsync(--pageCounter);
    }

    private void OpenMovieDetails(int id)
    {
        // TODO: Add page number to cookies to navigate back to same page - AldÃ­s 18.05.23
        nav.NavigateTo($"/MovieDetails/{id}");
    }
}