@page "/Movies"
@using Sep6Client.Model
@using Sep6Client.Data.Movies
@using Sep6Client.Data.DataHelper
@inject IMoviesService moviesService
@inject NavigationManager nav

<PageTitle>Movies</PageTitle>
<h1>Movies</h1>

@if (movies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <InputText @bind-Value="searchText"></InputText>
        <button @onclick="RefreshMoviesAsync">Search</button>
        <br/>
    </div>
    @* <div> *@
    @*     <p>Sort by: </p> *@
    @*     <InputRadioGroup @bind-Value="selectedSortOption" @onclick="RefreshMoviesAsync"> *@
    @*         @for (var i = 0; i < sortOptions.Length; i++) *@
    @*         { *@
    @*             <p> *@
    @*                 <InputRadio Value="@sortOptions[i]" @onclick="RefreshMoviesAsync"/> @sortOptions[i] *@
    @*             </p> *@
    @*         } *@
    @*     </InputRadioGroup> *@
    @* </div> *@
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>Title</th>
                <th>ID</th>
                <th>Rating</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var movie in movies)
            {
                var id = movie.Id;
                <tr>
                    <td><a @onclick="() => OpenMovieDetails(id)">@movie.Title</a></td>
                    <td>@movie.Id</td>
                    <td>@movie.Rating/10</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    <div>
         @if (pageCounter > 1)
         {
             <button @onclick="OnLoadPreviousPage">@leftArrow-- Previous</button>
         }
         <button @onclick="OnLoadNextPage">Next --></button>
     </div>
}
<p style="color: red">@errorMessage</p>

@code {
    private IList<Movie>? movies;
    private int pageCounter = 1;
    private string errorMessage = "";
    private char leftArrow = '<';
    private Dictionary<SearchFilterOptions, string> searchCriteria;
    private string searchText = "";
    private readonly string[] sortOptions = QueryHelper.GetSortByOptions();
    private string selectedSortOption;
    // TODO: Add sort order - Aldís 19.05.23
    
    protected override async Task OnInitializedAsync()
    {
        // TODO: Load page nr & search filters from session - Aldís 19.05.23
        selectedSortOption = sortOptions.First();
        searchCriteria = new Dictionary<SearchFilterOptions, string>
        {
            {SearchFilterOptions.PageNr, pageCounter.ToString()},
            {SearchFilterOptions.Text, searchText},
            {SearchFilterOptions.SortBy, selectedSortOption}
        };
        
        await RefreshMoviesAsync();
    }

    private async Task RefreshMoviesAsync()
    {
        UpdateSearchCriteria();

        if (string.IsNullOrEmpty(searchText))
        {
            await GetBrowseMoviesAsync();
            return;
        }

        await SearchMoviesAsync();
    }

    private async Task GetBrowseMoviesAsync()
    {
        try
        {
            movies = await moviesService.GetBrowsingMoviesAsync(searchCriteria);
        }
        catch(Exception e)
        {
            errorMessage = $"Exception thrown: {e.GetType()}\n{e.StackTrace}";
            await Console.Out.WriteLineAsync(e.StackTrace);
        }
    }

    private async Task SearchMoviesAsync()
    {
        try
        {
            movies = await moviesService.GetFilteredMoviesAsync(searchCriteria);
        }
        catch(Exception e)
        {
            errorMessage = $"Exception thrown: {e.GetType()}\n{e.StackTrace}";
            await Console.Out.WriteLineAsync(e.StackTrace);
        }
    }

    private void UpdateSearchCriteria()
    {
        searchCriteria[SearchFilterOptions.PageNr] = pageCounter.ToString();
        searchCriteria[SearchFilterOptions.Text] = searchText;
        // TODO: Sort order breaks when you search by string as one queries search and the other discover, TBC - Aldís 19.05.23
        // searchCriteria[SearchFilterOptions.SortBy] = selectedSortOption;
        // Console.WriteLine($"Updating search criteria...\nPage count = {pageCounter}\nSort by: {selectedSortOption}\nSearch text: {searchText}\n---------------------\n");
        Console.WriteLine($"Updating search criteria...\nPage count = {pageCounter}\nSearch text: {searchText}\n---------------------\n");
    }

    private async Task OnLoadNextPage()
    {
        pageCounter++;
        await RefreshMoviesAsync();
    }
    
    private async Task OnLoadPreviousPage()
    {
        pageCounter--;
        await RefreshMoviesAsync();
    }

    private void OpenMovieDetails(int id)
    {
        // TODO: Add page number to cookies to navigate back to same page - Aldís 18.05.23
        nav.NavigateTo($"/MovieDetails/{id}");
    }
}